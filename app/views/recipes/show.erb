<h2>Cocktail Name: <%= @recipes.name %></h2>

<ul>
  <label>Ingredients:</label>
  <li><%= @recipes.ingredients.gsub(/\n/, '<br/>') %>.</li>
  <br>
  <label>Directions:</label>
  <li><%= @recipes.directions.gsub(/\n/, '<br/>') %>.</li>
  <br>
  <label>Spirit:</label>
  <li><%= @recipes.spirit_type.gsub(/\n/, '<br/>') %>.</li>
  <br>
  <label>Created by: </label>
  <li><%= @recipes.user.username.gsub(/\n/, '<br/>') %>.</li>

</ul>

<a href=<%= "/recipes/#{@recipes.id}/edit" %>>Edit This Recipe!</a>

<%# delete form %>
<form action=<%= "/recipes/#{@recipes.id}" %> method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete This Recipe">
</form>

